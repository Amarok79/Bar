<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="catalog">
		<xs:complexType>
			<xs:sequence>
				<xs:element minOccurs="1" maxOccurs="1" name="substances">
					<xs:complexType>
						<xs:sequence>
							<xs:element maxOccurs="unbounded" name="substance">
								<xs:complexType>
									<xs:simpleContent>
										<xs:extension base="xs:string">
											<xs:attribute name="id" type="xs:string" use="required" />
										</xs:extension>
									</xs:simpleContent>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element minOccurs="1" maxOccurs="1" name="drinks">
					<xs:complexType>
						<xs:sequence>
							<xs:element maxOccurs="unbounded" name="drink">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="name" type="xs:string" />
										<xs:element name="teaser" type="xs:string" />
										<xs:element name="image" type="xs:string" />
										<xs:element name="tags" >
											<xs:simpleType>
												<xs:restriction base="xs:string">
													<xs:pattern value="((sour|sweet|bitter|dry|fresh|spicy|creamy|fruity|herbal|floral|tropical|exotic|0-star|1-star|2-star|3-star|in-testing);?)*"/>
												</xs:restriction>
											</xs:simpleType>
										</xs:element>
										<xs:element name="description" type="xs:string" />
										<xs:element name="glass">
											<xs:simpleType>
												<xs:restriction base="xs:string">
													<xs:pattern value="Old Fashioned|Double Old Fashioned|Caipirinha|Martini|Margarita|Longdrink|Tiki|Fancy"/>
												</xs:restriction>
											</xs:simpleType>
										</xs:element>
										<xs:element name="ice">
											<xs:simpleType>
												<xs:restriction base="xs:string">
													<xs:pattern value="Cubed|Crushed|None"/>
												</xs:restriction>
											</xs:simpleType>
										</xs:element>
										<xs:element name="garnish" type="xs:string" />
										<xs:element name="recipe">
											<xs:complexType>
												<xs:sequence>
													<xs:element maxOccurs="unbounded" name="ingredient">
														<xs:complexType>
															<xs:attribute name="amount" type="xs:decimal" use="optional" />
															<xs:attribute name="unit" type="xs:string" use="optional" />
															<xs:attribute name="substance" type="xs:string" use="required" />
														</xs:complexType>
													</xs:element>
													<xs:element maxOccurs="unbounded" name="instruction" type="xs:string"/>
												</xs:sequence>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>