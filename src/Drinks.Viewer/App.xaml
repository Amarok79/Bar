<Application
	x:Class="Drinks.Viewer.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	RequestedTheme="Dark">

	<Application.Resources>

		<LinearGradientBrush x:Key="BackgroundGradientBrush" StartPoint="0,0" EndPoint="0,1">
			<GradientStop Offset="0.0" Color="#FF181818" />
			<GradientStop Offset="1.0" Color="#FF181818" />
		</LinearGradientBrush>

		<SolidColorBrush x:Key="BackgroundSolidBrush" Color="#FF121212" />

	</Application.Resources>

</Application>
