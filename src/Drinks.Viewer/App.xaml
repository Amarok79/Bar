<Application
	x:Class="Drinks.Viewer.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converter="using:Drinks.Viewer.Converter"
	RequestedTheme="Dark">

	<Application.Resources>
		<SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#FF121212" />
		<SolidColorBrush x:Key="ContentBackgroundBrush" Color="#FF181818" />
		<SolidColorBrush x:Key="DrinkItemBorderBrush" Color="#FF2A2A2A" />

		<converter:AmountConverter x:Key="AmountConverter" />

	</Application.Resources>

</Application>
