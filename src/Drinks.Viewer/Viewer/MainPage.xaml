<Page
	x:Class="Drinks.Viewer.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Drinks.Viewer"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Page.DataContext>
		<local:MainPageViewModel />
	</Page.DataContext>

	<Grid x:Name="Root">
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid
			x:Name="HeaderArea"
			Grid.Row="0"
			Padding="20"
			Background="{StaticResource BackgroundSolidBrush}">

			<TextBlock
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				FontFamily="Arial Rounded MT Bold"
				FontSize="36"
				Text="The KroKo Bar" />
		</Grid>

		<Grid
			x:Name="DrinksArea"
			Grid.Row="1"
			Padding="20"
			Background="{StaticResource BackgroundGradientBrush}">

			<GridView ItemsSource="{Binding Drinks}" SelectionMode="None">
				<GridView.ItemTemplate>
					<DataTemplate x:Name="DrinkTemplate" x:DataType="local:DrinkViewModel">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="300" />
								<RowDefinition Height="25" />
								<RowDefinition Height="50" />
							</Grid.RowDefinitions>

							<Image
								Grid.Row="0"
								Width="225"
								Height="300"
								Source="{Binding Image}"
								Stretch="UniformToFill" />

							<TextBlock
								Grid.Row="1"
								Width="225"
								Height="25"
								Margin="0,10,0,0"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								FontSize="16"
								FontWeight="Bold"
								Foreground="White"
								Text="{Binding Name}"
								TextTrimming="CharacterEllipsis"
								TextWrapping="NoWrap" />

							<TextBlock
								Grid.Row="2"
								Width="225"
								Height="50"
								Margin="0,5,0,0"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								Foreground="#FFB3B3B3"
								Text="{Binding Teaser}"
								TextWrapping="Wrap" />

						</Grid>
					</DataTemplate>
				</GridView.ItemTemplate>
				<GridView.ItemContainerStyle>
					<Style TargetType="GridViewItem">
						<Setter Property="Margin" Value="30" />
					</Style>
				</GridView.ItemContainerStyle>
			</GridView>

		</Grid>

	</Grid>
</Page>
