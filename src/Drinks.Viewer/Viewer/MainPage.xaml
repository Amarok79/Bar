<Page
	x:Class="Drinks.Viewer.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Drinks.Viewer"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Page.DataContext>
		<local:MainPageViewModel />
	</Page.DataContext>

	<Grid x:Name="Root">
		<Grid.RowDefinitions>
			<RowDefinition Height="80" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid
			x:Name="HeaderArea"
			Grid.Row="0"
			Padding="20"
			Background="{StaticResource BackgroundSolidBrush}">

			<TextBlock
				VerticalAlignment="Center"
				FontSize="36"
				Text="Kroko Hausbar" />
		</Grid>

		<Grid
			x:Name="DrinksArea"
			Grid.Row="1"
			Background="{StaticResource BackgroundGradientBrush}">

			<ScrollViewer
				Padding="20"
				HorizontalScrollBarVisibility="Visible"
				VerticalScrollBarVisibility="Disabled">
				<GridView ItemsSource="{Binding Cocktails}" SelectionMode="None">
					<GridView.ItemTemplate>
						<DataTemplate x:Name="DrinkTemplate" x:DataType="local:Cocktail">
							<Grid Margin="0,0,10,10">
								<Grid.RowDefinitions>
									<RowDefinition Height="*" />
									<RowDefinition Height="*" />
									<RowDefinition Height="*" />
								</Grid.RowDefinitions>

								<Image
									Grid.Row="0"
									Width="200"
									Height="200"
									Source="{Binding Image}"
									Stretch="Fill" />

								<TextBlock
									Grid.Row="1"
									Height="25"
									Margin="0,5,0,0"
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									FontSize="16"
									FontWeight="Bold"
									Foreground="White"
									Text="{Binding Name}" />

								<TextBlock
									Grid.Row="2"
									Width="200"
									Height="50"
									Margin="0,5,0,0"
									HorizontalAlignment="Left"
									VerticalAlignment="Center"
									Foreground="#FFB3B3B3"
									Text="{Binding Description}"
									TextWrapping="Wrap" />

							</Grid>
						</DataTemplate>
					</GridView.ItemTemplate>
					<GridView.ItemsPanel>
						<ItemsPanelTemplate>
							<ItemsWrapGrid MaximumRowsOrColumns="2" Orientation="Vertical" />
						</ItemsPanelTemplate>
					</GridView.ItemsPanel>
				</GridView>
			</ScrollViewer>

		</Grid>

	</Grid>
</Page>
